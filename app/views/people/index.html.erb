<p id="notice"><%= notice %></p>

<h1 style="text-align:center">People</h1>
<%= select_tag(:company_tech_index, options_for_select(Company.all.map {|p| [p.name, p.uuid]} ), include_blank: 'Select Company',class: "col-md-offset-3 col-md-6 btn btn-default dropdown-toggle") %>
<br/>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person', new_person_path, class: "col-md-offset-3 col-md-6 btn btn-primary"%>
